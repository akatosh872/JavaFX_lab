<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="mainPanel" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jfxtest.DisplayController">
    <children>
        <MenuBar prefHeight="25.0" prefWidth="640.0">
            <menus>
                <Menu mnemonicParsing="false" text="OS">
               <items>
                  <MenuItem fx:id="osMenuItem" mnemonicParsing="false" onAction="#showOSInfo" text="ShowOS" />
               </items></Menu>
                <Menu fx:id="CPUInformation" mnemonicParsing="false" text="CPU">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#showCPUInfo" text="Information" />
                        <MenuItem fx:id="CPULoading" mnemonicParsing="false" onAction="#showCPULoading" text="CPU Loading" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <TabPane fx:id="CPUtabs" layoutY="25.0" prefHeight="455.0" prefWidth="640.0">
            <tabs>
                <Tab closable="false" text="Information">
                    <content>
                        <Label fx:id="cpuLabel" />
                    </content>
                </Tab>
                <Tab closable="false" text="CPU Loading">
                   <content>
                      <Pane fx:id="cpuLoadPane" prefHeight="200.0" prefWidth="200.0">
                         <children>
                             <LineChart fx:id="cpuLoadChart" layoutX="14" layoutY="14" prefHeight="320.0" prefWidth="601.0">
                                 <xAxis>
                                     <NumberAxis side="BOTTOM" />
                                 </xAxis>
                                 <yAxis>
                                     <NumberAxis autoRanging="false" side="LEFT" upperBound="100" />
                                 </yAxis>
                             </LineChart>
                         </children>
                      </Pane>
                   </content>
                </Tab>
            </tabs>
        </TabPane>
        <Label fx:id="osLabel" layoutX="10.0" layoutY="50.0" />
        <Label fx:id="systemBitnessLabel" layoutX="10.0" layoutY="70.0" />
        <Label fx:id="computerNameLabel" layoutX="10.0" layoutY="90.0" />
        <Label fx:id="memoryLabel" layoutX="10.0" layoutY="110.0" />
        <Label fx:id="totalMemoryLabel" layoutX="10.0" layoutY="130.0" />
    </children>
</Pane>
